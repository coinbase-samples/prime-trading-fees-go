# Coinbase Prime Trading Fees Manager Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# Prime API Credentials (REQUIRED)
# ==============================================================================
# Your Prime API access key
PRIME_ACCESS_KEY=

# Your Prime API passphrase
PRIME_PASSPHRASE=

# Your Prime API signing key (base64 encoded)
PRIME_SIGNING_KEY=

# Your Prime portfolio ID
PRIME_PORTFOLIO=

# Your Prime service account ID
PRIME_SERVICE_ACCOUNT_ID=

# ==============================================================================
# Market Data Configuration
# ==============================================================================
# Comma-separated list of products to subscribe to
MARKET_DATA_PRODUCTS=BTC-USD,ETH-USD

# Maximum number of order book levels to maintain (0 = unlimited)
MARKET_DATA_MAX_LEVELS=10

# ==============================================================================
# Fee Configuration
# ==============================================================================
# Fee strategy type: flat or percent
FEE_TYPE=percent

# For flat fee strategy: fixed dollar amount
# FEE_AMOUNT=2.99

# For percent fee strategy: decimal percentage (e.g., 0.005 = 0.5% = 50 bps)
FEE_PERCENT=0.002

# ==============================================================================
# Server Configuration
# ==============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Output logs as JSON (true/false)
LOG_JSON=false
