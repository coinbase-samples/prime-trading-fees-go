# Coinbase Prime Trading Fees Manager Configuration
#
# IMPORTANT: All credentials MUST be set via environment variables in .env file
# Never commit credentials to version control!

# Market Data Configuration
market_data:
  # WebSocket endpoint
  websocket_url: "wss://ws-feed.prime.coinbase.com"

  # Products to subscribe to
  products:
    - BTC-USD
    - ETH-USD

  # Maximum number of order book levels to maintain (0 = unlimited)
  max_levels: 10

  # Delay between reconnection attempts
  reconnect_delay: 5s

  # Initial wait time for snapshot data
  initial_wait_time: 2s

  # Display update rate for streaming data
  display_update_rate: 5s

fees:
  # Fee strategy (applies to both buys and sells)
  type: percent
  percent: "0.002"  # 20 bps on all orders

server:
  # Logging level: debug, info, warn, error
  log_level: info

  # Output logs as JSON
  log_json: false

database:
  # SQLite database path for order tracking
  path: "orders.db"

